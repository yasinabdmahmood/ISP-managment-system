<h1>PaymentRecord#index</h1>
<p>Find me in app/views/payment_record/index.html.erb</p>
<div class="container">
    <div class="row justify-content-center">
        <table class="table table-striped table-bordered w-75 ">
            <thead class="thead-dark">
                <tr>
                <th>Client</th>
                <th>Employee</th>
                <th>Amount</th>
                <th>Date</th>
                </tr>
            </thead>
            <tbody>
                <% @payment_records.each do |payment_record| %>
                <tr>
                    <td><%= payment_record.subscription_record.client.name %></td>
                    <td><%= payment_record.employee.name %></td>
                    <td><%= payment_record.amount %></td>
                    <td><%= payment_record.created_at %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
