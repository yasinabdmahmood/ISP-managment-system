<h1>Create new subscription record</h1>
<div class="container p-3 d-flex flex-column align-items-stretch">
<%= form_with model: @new_subscription_record, url: create_subscription_record_path, method: :post, local: true, scope: :new_subscription_record do |f| %>
    
    <div class="form-group">
    <%= f.label :client_id %><br>
    <%= f.collection_select(:client_id, @clients, :id, :name) %>
    </div>

    <%= f.hidden_field :employee_id, value: @current_user_id %>

    <div class="form-group">
    <%= f.label :subscription_type_id %><br>
    <%= f.collection_select(:subscription_type_id, @subscription_types, :id, :category) %>
    </div>

    <div class="form-group">
    <%= f.label :'Initial pay' %><br>
    <%= f.number_field  :pay,class:"form-control"%>
    </div>

    <%= f.submit "Save",class:"btn btn-primary" %>
<% end %>
</div>