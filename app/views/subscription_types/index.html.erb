<h1>SubscriptionType#index</h1>
<p>Find me in app/views/subscription_type/index.html.erb</p>
<div class="container">
    <div class="row justify-content-center">
        <table class="table table-striped table-bordered w-75 ">
            <thead class="thead-dark">
                <tr>
                <th>Type</th>
                <th>Cost</th>
                <th>Profit info</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @subscription_types.each do |subscription_type| %>
                <tr>
                    <td><%= subscription_type.category %></td>
                    <td><%= subscription_type.cost %></td>
                    <td><%= subscription_type.profit %></td>
                    <td>
                      <%= link_to "Delete", destroy_subscription_types_path(id: subscription_type.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<%= link_to "Create new subscription type", subscription_types_new_path, class: "btn btn-primary" %>

