<h1>Employee#index</h1>
<p>Find me in app/views/employee/index.html.erb</p>
<div class="container">
    <div class="row justify-content-center">
        <table class="table table-striped table-bordered w-75 ">
            <thead class="thead-dark">
                <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Contact info</th>
                </tr>
            </thead>
            <tbody>
                <% @employees.each do |employee| %>
                <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.role %></td>
                    <td>
                        <%= employee.employee_contact_information.first&.contact_info || 'No contact info' %>
                        <%= link_to 'Add', new_employee_contact_information_path, method: :post, class: 'btn btn-primary' %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

