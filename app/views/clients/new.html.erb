<h1>Create new client</h1>
<div class="container p-3 d-flex flex-column align-items-stretch">
<%= form_with model: @new_client, url: create_client_path, method: :post, local: true, scope: :new_client do |f| %>
    <div class="form-group">
    <%= f.label :Name %><br>
    <%= f.text_field :name,class:"form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :'User name' %><br>
    <%= f.text_field :username,class:"form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :'Contact information' %><br>
    <%= f.text_field :contact_info,class:"form-control" %>
    </div>

    <%= f.submit "Save",class:"btn btn-primary" %>
<% end %>
</div>