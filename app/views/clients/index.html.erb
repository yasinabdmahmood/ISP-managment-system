<h1>Client#index</h1>
<p>Find me in app/views/client/index.html.erb</p>
<div class="container">
    <div class="row justify-content-center">
        <table class="table table-striped table-bordered w-75 ">
            <thead class="thead-dark">
                <tr>
                <th>Name</th>
                <th>username</th>
                <th>Contact info</th>
                <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @clients.each do |client| %>
                <tr>
                    <td><%= client.name %></td>
                    <td><%= client.username %></td>
                    <td>
                        <% if client.client_contact_informations.first.try(:contact_info).present? %>
                         <%= client.client_contact_informations.first.contact_info %>
                        <% else %>
                         No contact information
                        <% end %>
                    </td>
                    <td>
                      <%= link_to 'Delete', destroy_client_path(client), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                      <%= link_to "Edit", edit_client_path(client), class: "btn btn-primary" %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<%= link_to "Create new Client", new_client_path, class: "btn btn-primary" %>
